<div class="log_in_bg">
	<h2>Sign in</h2>
	<div class="log_in_bg_text">
		New User?
		<%= link_to "Sign Up", new_user_registration_path %>
	</div>
	<div class="log_in">
		<p class="alert">
			<span style="color:#FF0000;"><%= alert %></span>
		</p>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="inputs">
			<div class="field"> 
			<%= f.label :email %>  
  			<%= f.text_field :email,:required => false,:autofocus => true, :class => 'span2', :placeholder => "example@example.com"%>
  			</div>
  			<p><%= f.label :password %>
  				<br />  
             <%= f.password_field :password ,  :required => false%></p> 
			<!--<%= f.input :email, :required => false,:autofocus => true%>
			<%= f.input :password, :required => false %>-->
			<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		</div>
		<div class="actions">
			<%= f.button :submit, "Sign in", {:class => 'btn'} %>
		</div>
		<% end %>
		<br />
		<%= link_to "Forgot your password?", new_password_path(resource_name) %>
		<!--<%= render "links" %>-->
	</div>
</div>
