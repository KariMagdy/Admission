<%= form_tag "/admin/applicants/#{app.id}/sendemail" do %>
<div class="well2">
    	<b><%= label_tag 'To', nil, :style=>'position:relative;left:30px' %></b><br/><br/>
    	<%= select_tag :to , options_for_select(@to), :multiple => true, :class => 'span3', :style=>'position:relative;left:30px'%><br/><br/>
    	<b><%= label_tag 'Subject', nil, :style=>'position:relative;left:30px' %></b><br/><br/>
    	<%= text_field_tag :subject ,  nil, :class => 'span3', :style=>'position:relative;left:30px'%><br/><br/>
    	<b><%= label_tag 'Body', nil, :style=>'position:relative;left:30px' %></b><br/><br/>
        <%= text_area_tag :body , nil, :rows => 15, :cols => 25, :style=>'position:relative;left:30px' %><br/><br/>
        
        <%= submit_tag "Send" ,:style=>'position:relative;left:300px'%>
</div>
<% end %>
