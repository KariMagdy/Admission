<%= form_tag "/admin/applicants/send_batch_email" do %>
<div class="well2">
    	<b><%= label_tag 'To', nil, :style=>'position:relative;left:30px' %></b><br/><br/>
    	
    	<b><%= label_tag 'Semester', nil, :style=>'position:relative;left:30px' %></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>All</b>&nbsp;&nbsp;&nbsp;<%= check_box_tag 'all_semesters'%><br/>
    	<%= select_tag :semester , options_from_collection_for_select(Semester.all,:id, :name ), :multiple => true, :class => 'span3', :style=>'position:relative;left:30px'%><br/><br/>
    	
    	<b><%= label_tag 'Status', nil, :style=>'position:relative;left:30px' %></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>All</b>&nbsp;&nbsp;&nbsp;<%= check_box_tag 'all_statuses'%><br/>
    	<%= select_tag :status , options_for_select(["Saved","Submitted", "Approved", "Rejected"]), :multiple => true, :class => 'span3', :style=>'position:relative;left:30px'%><br/><br/>
    	
    	<b><%= label_tag 'Program', nil, :style=>'position:relative;left:30px' %></b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>All</b>&nbsp;&nbsp;&nbsp;<%= check_box_tag 'all_programs'%><br/>
    	<%= select_tag :program , options_from_collection_for_select(School.all,:id, :name ), :multiple => true, :class => 'span3', :style=>'position:relative;left:30px'%><br/><br/>
    	
    	<b><%= label_tag 'Subject', nil, :style=>'position:relative;left:30px' %></b><br/><br/>
    	<%= text_field_tag :subject ,  nil, :class => 'span3', :style=>'position:relative;left:30px'%><br/><br/>
    	<b><%= label_tag 'Body', nil, :style=>'position:relative;left:30px' %></b><br/><br/>
        <%= text_area_tag :body , nil, :rows => 15, :cols => 25, :style=>'position:relative;left:30px' %><br/><br/>
        
        <%= submit_tag "Send" ,:style=>'position:relative;left:300px'%>
</div>
<% end %>
